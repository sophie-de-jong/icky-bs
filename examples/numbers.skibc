TRUE := K
FALSE := K I
PAIR := B C (C I)
NOT := C (C I FALSE) TRUE

IS_ZERO := C I TRUE
IS_POS := B NOT IS_ZERO
SUCC := PAIR FALSE
PRED := C I FALSE

0 := I
1 := SUCC 0
2 := SUCC 1
3 := SUCC 2
; and so on...

IS_ZERO 0        true false
IS_ZERO 1        true false
IS_POS 3         true false
IS_POS 0         true false
IS_ZERO (PRED 1) true false
IS_POS (SUCC 1)  true false
